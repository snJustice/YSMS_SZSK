        <Label Content="提示信息：" FontStyle="Normal" FontWeight="Bold" Foreground="Blue" Height="28" HorizontalAlignment="Left" Margin="3,10,0,0" Name="label3" VerticalAlignment="Top" />
        <Button Content="确 认" Height="23" HorizontalAlignment="Left" Margin="235,77,0,0" Name="btn_Confrim" VerticalAlignment="Top" Width="75" Click="btn_Confrim_Click" IsDefault="True" />
    </Grid>
</UserControl>
